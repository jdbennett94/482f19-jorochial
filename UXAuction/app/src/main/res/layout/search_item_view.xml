<?xml version="1.0" encoding="utf-8"?>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            tools:showIn="@layout/activity_scrolling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom = "5dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:id="@+id/itemPicture"

                        style="@style/ItemPic"

                        android:layout_alignParentTop="true"

                        android:layout_marginTop="37dp"

                        android:background="@drawable/bike" />

                    <TextView
                        android:id="@+id/itemTitle"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/itemPrice"
                        android:layout_alignTop="@+id/itemPicture"
                        android:text="Bike"
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <Button

                        android:id="@+id/itemPrice"
                        android:layout_width="100dp"
                        android:layout_height="50dp"


                        android:layout_alignBottom="@id/itemPicture"

                        android:layout_marginTop="45dp"

                        android:layout_toRightOf="@id/itemPicture"

                        android:background="@color/colorPrimary"
                        android:onClick="itemClick"
                        android:text="$25"
                        android:textSize="20dp" />


                    <Button

                        android:id="@+id/button"

                        android:layout_width="100dp"

                        android:layout_height="50dp"

                        android:layout_alignBottom="@id/itemPrice"

                        android:layout_marginTop="45dp"
                        android:layout_toRightOf="@id/itemPrice"

                        android:text="View"
                        android:onClick="searchUpdate"/>


                </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

